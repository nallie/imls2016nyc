.cd-testimonials-wrapper
	position relative
	width 90%
	max-width 768px
	background-color $color-3
	margin 2em auto
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	padding 20px 40px 70px
	z-index 1
	&::after
		content '\201C'
		position absolute
		top 10px
		left 0
		width 50px
		height 50px
		padding-top 8px
		margin-left -25px
		background $color-5
		font-family "Georgia", serif
		color #ffffff
		font-size 70px
		font-size 4.375rem
		text-align center
		display none

@media $tablet-up
	.cd-testimonials-wrapper
		margin 4em auto
		padding 64px 50px 114px

		@media $desktop-up
			&::after
				display block

.cd-testimonials
	color #ffffff
	text-align center
	&::after
		clear both
		content ""
		display table
	& > li
		position absolute
		opacity 0
		&:first-child
			position relative
			opacity 1
	p
		font-family Campton-LightItalic, sans-serif
		font-style italic
		line-height 1.4
		margin-bottom 1em
		padding 0 14px

@media $tablet-up
	.cd-testimonials
		p
			font-size 22px
			font-size 1.375rem

@media $desktop-up
	p
		font-size 26px
		font-size 1.625rem
		line-height 1.6

.cd-author img, .cd-author .cd-author-info
	display inline-block
	vertical-align middle

.cd-author
	img
		width 32px
		height 32px
		border-radius 50%
		margin-right 5px
		box-shadow 0 0 6px rgba(0, 0, 0, 0.3)
	.cd-author-info
		text-align left
		line-height 1.2
		li
			&:first-child
				font-size 14px
				font-size 0.875rem
			&:last-child
				font-size 12px
				font-size 0.75rem
				color #6b6b70

@media $tablet-up
	.cd-author
		img
			width 50px
			height 50px
		.cd-author-info
			line-height 1.4
			li
				&:first-child
					font-size 16px
					font-size 1rem
				&:last-child
					font-size 14px
					font-size 0.875rem

.flex-direction-nav
	li
		position absolute
		height 100%
		width 40px
		top 0
		&:first-child
			left 0
		&:last-child
			right 0
			a
				&::before
					transform translateY(-35px) rotate(-45deg)
				&::after
					transform translateY(-27px) rotate(45deg)
		a
			display block
			height 100%
			width 100%
			overflow hidden
			text-indent 100%
			white-space nowrap
			transition background-color 0.2s
			&::before
				transform translateY(-35px) rotate(45deg)
			&::after
				transform translateY(-27px) rotate(-45deg)

.no-touch
	.flex-direction-nav
		li
			a
				&:hover
					background-color #323234
	.cd-see-all
		&:hover
			color #79b6e4

.flex-direction-nav li
	a::before
	a::after
		content ''
		position absolute
		left 50%
		top 50%
		width 2px
		height 13px
		background-color #ffffff

	@media $tablet-up
		width 50px

	@media $desktop-up
		a::before
		a::after
			background-color #5e5e63
			transition background-color 0.2s

		a:hover::before
		a:hover::after
			background-color #ffffff

.cd-see-all
	position absolute
	z-index 1
	left 0
	bottom 0
	width 100%
	height 50px
	line-height 50px
	background-color darken($color-3, 20%)
	text-align center
	text-transform uppercase
	color #6b6b70
	font-weight 700
	font-size 12px
	font-size 0.75rem
	transition color, 0.2s

.cd-testimonials-all
	position fixed
	top 0
	left 0
	height 100%
	width 100%
	background-color #ffffff
	z-index 2
	visibility hidden
	opacity 0
	transition opacity .3s 0s, visibility 0s .3s
	.cd-testimonials-all-wrapper
		position absolute
		left 0
		top 0
		height 100%
		width 100%
		overflow auto
		& > ul
			width 90%
			max-width 1170px
			margin 4em auto
			&::after
				clear both
				content ""
				display table
	.cd-testimonials-item
		margin-bottom 2em
		opacity 0
		transform translate3d(0, 0, 0) scale(0.4)
		backface-visibility hidden
		transition transform .3s, opacity .3s
	p
		position relative
		background #79b6e4
		color #ffffff
		padding 2em
		line-height 1.4
		border-radius 0.25em
		margin-bottom 1em
		&::after
			content ''
			position absolute
			top 100%
			left 2em
			height 0
			width 0
			border 8px solid transparent
			border-top-color #79b6e4
	.cd-author
		text-align left
		margin-left 1.5em
		img
			box-shadow 0 0 0 transparent
	&.is-visible
		visibility visible
		opacity 1
		transition opacity .3s 0s, visibility 0s 0s
		.cd-testimonials-all-wrapper
			-webkit-overflow-scrolling touch
		.cd-testimonials-item
			opacity 1
			transform translate3d(0, 0, 0) scale(1)

@media $tablet-up
	.cd-testimonials-all
		.cd-testimonials-item
			width 46%
			margin 0 2% 3em
		.cd-author
			margin-left 1em

@media $desktop-up
	.cd-testimonials-all
		.cd-testimonials-item
			width 30%
			margin 0 1.6666% 3em

.close-btn
	position fixed
	display block
	width 40px
	height 40px
	top 10px
	right 5%
	overflow hidden
	text-indent 100%
	white-space nowrap
	&::before
		transform rotate(45deg)
	&::after
		transform rotate(-45deg)

.close-btn::before
.close-btn::after
	content ''
	position absolute
	display inline-block
	width 2px
	height 24px
	top 8px
	left 19px
	background-color #39393c
