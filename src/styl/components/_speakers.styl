.ch-grid
	margin 20px 0 0 0
	padding 0
	list-style none
	display block
	text-align center
	width 100%

	&:after
	&:before
		content ''
		display table

	&:after
		clear both

	li
		display inline-block
		margin 20px
		width 250px
		height 250px
		@media $tablet-up
			width 400px
			height 400px

.ch-img-heidi
	background-image url('../../img/heidi-headshot_2.png')
	background-size contain
	background-position center
	background-repeat no-repeat

