.ch-info
	position relative
	width 100%
	height 100%
	border-radius 50%
	overflow hidden
	opacity 0
	transition all 0.4s ease-in-out
	backface-visibility hidden

	h3
		color $color-2
		text-transform uppercase
		position relative
		letter-spacing 2px
		font-size 22px
		margin 0 30px
		padding 65px 0 0 0
		height 110px
		text-shadow 0 0 1px #fff, 0 1px 2px rgba(0,0,0,0.3)

	p
		color $color-2
		padding 10px 5px
		font-style italic
		margin 0 30px
		font-size 12px
		border-top 1px solid rgba(225,225,225, 0.5)

		a
			display block
			color rgba(255,255,255,0.7)
			font-style normal
			font-weight 700
			text-transform uppercase
			font-size 9px
			letter-spacing 1px
			padding-top 4px

			&:hover
				color rgba(255,242,34, 0.8)

.ch-item
	width 100%
	height 100%
	border-radius 50%
	position relative
	cursor default
	box-shadow inset 0 0 0 0 rgba(200,95,66, 0.4), inset 0 0 0 16px rgba(255,255,255,0.6), 0 1px 2px rgba(0,0,0,0.1);
	transition all 0.4s ease-in-out

	&:hover
		box-shadow inset 0 0 0 200px rgba(200,95,66, 0.4), inset 0 0 0 16px rgba(255,255,255,0.8), 0 1px 2px rgba(0,0,0,0.1)

		.ch-info
			opacity 1
			transform scale(1)
@media $phone-down
	.ch-item
		width 100%
		height 100%
		border-radius 50%
		position relative
		cursor default
		box-shadow inset 0 0 0 0 rgba(200,95,66, 0.4), inset 0 0 0 16px rgba(255,255,255,0.6), 0 1px 2px rgba(0,0,0,0.1);
		transition all 0.4s ease-in-out
		box-shadow inset 0 0 0 200px rgba(200,95,66, 0.4), inset 0 0 0 16px rgba(255,255,255,0.8), 0 1px 2px rgba(0,0,0,0.1)

		.ch-info
			opacity 1
			transform scale(1)
