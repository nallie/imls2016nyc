.ch-info
	position relative
	width 100%
	left -2%
	overflow hidden
	//opacity 0
	transition all 0.4s ease-in-out
	backface-visibility hidden
	@media $desktop-up
		position absolute

	@media $phone-down
		height 85%
	//	top 230px
	//	margin-bottom 140px

	h3
		color $color-2
		text-transform uppercase
		position relative
		letter-spacing 2px
		font-size 22px
		margin 0 30px
		padding 10px 0 0 0
		height auto
		text-shadow 0 0 1px #fff, 0 1px 2px rgba(0,0,0,0.3)
		@media $tablet-up
			padding 30px 0 0 0
			height auto
		//	min-height 95px

	p
		color $color-2
		padding 10px 5px
		font-style italic
		margin 0 30px
		font-size 14px
		border-top 1px solid rgba(225,225,225, 0.5)
		@media $desktop-up
			font-size 18px
		//@media $phone-down
		//	min-height 58px

		a
			display block
			color rgba(255,255,255,0.7)
			font-style normal
			font-weight 700
			text-transform uppercase
			font-size 9px
			letter-spacing 1px
			padding-top 4px

			&:hover
				color rgba(255,242,34, 0.8)

.ch-item
	width 100%
	height 100%
	border-radius 50%
	position relative
	cursor default
	box-shadow inset 0 0 0 0 rgba(200,95,66, 0.4), inset 0 0 0 16px rgba(255,255,255,0.6), 0 1px 2px rgba(0,0,0,0.1);
	transition all 0.4s ease-in-out
	//@media $phone-down
	//	&:hover
	//		box-shadow none
	//&:hover
	//	box-shadow inset 0 0 0 200px rgba(200,95,66, 0.4), inset 0 0 0 16px rgba(255,255,255,0.8), 0 1px 2px rgba(0,0,0,0.1)

	.ch-infogru
		opacity 1
		transform scale(1)

