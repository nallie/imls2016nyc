#js-register
	background-image url("../../img/Register.png")
	background-repeat no-repeat
	background-size contain


// ---------------------------
// Form starting stylings
// ---------------------------
#pardot-form
	position relative
	margin 0 auto
	// background red

	a
		color $color-2
		text-decoration underline

.group
	position relative
	margin-bottom 45px

input
	background transparent
	font-size 18px
	padding 10px 10px 10px 5px
	display block
	width 300px
	border none
	border-bottom 1px solid $color-1

	&:focus
		outline none

label
	color $drk-grey
	font-size 18px
	font-weight normal
	position absolute
	pointer-events none
	left 5px
	top 10px
	transition 0.2s ease all

input:focus ~ label
input:valid ~ label
select ~ label
	top -20px
	font-size 14px
	color $color-2


// BARS ----------------------
.bar
	position relative
	display block
	width 300px
	&:before
		left 50%
	&:after
		right 50%

.bar:before,
.bar:after
	content ''
	height 2px
	width 0
	bottom 1px
	position absolute
	background $color-1
	transition 0.2s ease all

input:focus ~ .bar:before,
input:focus ~ .bar:after
	width 50%

.highlight
	position absolute
	height 60%
	width 100px
	top 25%
	left 0
	pointer-events none
	opacity 0.5

input:focus ~ .highlight
	animation inputHighlighter 0.3s ease

@keyframes inputHighlighter {
	from {
		background: $color-5
	}
	to {
		width: 0
		background: transparent
	}
}


