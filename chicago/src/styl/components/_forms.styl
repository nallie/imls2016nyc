/* ==========  Select Field Variables ========== */
$color-black = #fff
$select-background-color = transparent
$select-border-color = unquote("rgba(#{$color-black}, 0.12)") !default
$select-font-size = 16px
$select-color = unquote("rgba(#{$color-black}, 0.26)") !default
$select-padding = 4px

/* ==========  Select Field ========== */

/* Style Select Field */
select
  font-family inherit
  background-color transparent
  width 100%
  padding $select-padding 0
  font-size $select-font-size
  color $select-color
  border none
  border-bottom 1px solid $select-border-color


/* Remove focus */
select:focus
  outline none

/* Hide label */
.selectfield label
	display none

/* Use custom arrow */
.selectfield select
	appearance none
	outline 0
	background-color transparent
	border-width 0 0 1px 0
	border-color $color-1
	border-radius 0
	width 100%
	min-height 40px

	&::before
		font-family 'Material-Icons'
		content '\e5c5'
		position absolute
		right 8px
		top 10px
		color $color-1




.selectfield
	font-family Campton,'Verdana',sans-serif
	position relative

	&:after
		position absolute
		/* Styling the down arrow */
		width 0
		height 0
		padding 0
		font-family 'Material Icons'
		content '\e5c5'
		right 28px
		top 10px
		color $color-1
		font-size 1.7rem
